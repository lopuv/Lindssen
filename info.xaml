             x:Class="Lindssen_app.info"
             Title="info">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            x:Name="banaan"
            Text="..."/>

        <Label
            Grid.Row="1"
            x:Name="appel"
            Text="..."/>

        <Label
            Grid.Row="2"
            x:Name="peer"
            Text="..."/>

        <Button
            x:Name="citroen"
            Clicked="citroen_Clicked"
            HeightRequest="200"
            WidthRequest="200" />

    </Grid>
</ContentPage>